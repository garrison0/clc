---
import Layout from "@layouts/Layout.astro";
import ExternalLink from "@utils/ExternalLink.astro";
import Header from "@components/utils/Header.astro";
import homepage from '../../site/content/homepage.yml';
import moment from 'moment';
import _ from 'lodash';

const servicesByDay = _.groupBy(homepage.serviceTimes, ({ day }) => day);

---

<Layout title="Christ Church - a congregation of the LCMS">
  <div class="sr-only" id="start"></div>
  <div class="wrapper">
    <main id="main">
      <!-- CLC intro section component -->
      <div class="overlay z-10"></div>
      <section id="introduction" aria-label="Christ Church introduction"></section>
      <section aria-label="Livestream service">
        <div class="z-40">
          <Header text="Christ Church Woodside" />
          <p>
            Celebrating God's Gospel to the world throughout the world's borough.
          </p>
          <p>
            A congregation of the <ExternalLink
              href="https://www.lcms.org/"
              name="Lutheran Church—Missouri Synod."
            />
          </p>
        </div>
        <h3 class="livestream-header">Livestream service</h3>
        <iframe width="560" height="315" class="livestream"
          src="https://www.youtube.com/embed/FNal5F0UDVc?si=l8nHH24OA2qY-OyN" 
          title="YouTube video player" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
          allowfullscreen>
        </iframe>
      </section>
      <section aria-label="Service time">
        <h3>Join us</h3>
        <div>
          { 
            Object.keys(servicesByDay).map((day: any) => 
              <div>
                <h4>{day}</h4>
                {
                  servicesByDay[day].map((service: any) => (
                      <div>{service.start} - {service.title}</div>
                  ))
                }
              </div>
            )
          }
        </div>
      </section>
      <section aria-label="Announcements">
        <h3>Announcements</h3>
        <ul class="announcements-list">
          { homepage.announcements.map((announcement: any) => (
            <li class="announcement">
              <small>
                <bold>{ moment(announcement.datetime).format("LL") }</bold>
              </small>
              <h3 class="announcement-title">
                { announcement.title }
              </h3>
              <small>
                { announcement.description }
              </small>
            </li>
          ))}
        </ul>
      </section>
    </main>
  </div>
</Layout>

<style>
  .announcements-list { 
    padding-left: 0;
    margin-top: 0;
    list-style: none;
    font-size: initial;
  }

  .announcement { 
    border-top: 1px solid var(--color-eggshell);
    padding: 1rem 0;
  }

  .announcement:is(:last-child) { 
    border-bottom: 1px solid var(--color-eggshell);
  }

  .announcement-title { 
    margin-bottom: 0;
  }

  img {
    height: auto;
    margin: var(--space-l) 0;
  }

  section:not(#introduction) {
    background-color: var(--color-background);
    z-index: 10;
    position: relative;
    padding: 2rem 2.75rem;
  }

  section:not(#introduction):not(:last-child) {
    padding-bottom: 0;
  }

  .button-wrapper {
    margin: var(--space-xl) 0;
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(33,27,23,.59);
  }

  #introduction { 
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    align-content: center;
    justify-content: flex-start;
    align-items: center;

    background-image: url("../images/clc.jpeg");
    background-repeat: no-repeat, repeat;
    background-size: cover;
    margin: 0;
    min-height: 35rem;
  }

  #template-button {
    align-items: center;
    background: var(--color-green);
    border-radius: var(--border-radius);
    box-shadow: 0px 0px 30px 0px var(--color-green);
    color: var(--color-white);
    display: flex;
    flex-wrap: wrap;
    font-size: var(--step-2);
    gap: var(--space-xs);
    margin: 0 auto;
    padding: var(--space-2xs) var(--space-xs);
    text-decoration: none;
    width: fit-content;
  }

  #template-button:focus,
  #template-button:hover {
    box-shadow: none;
  }

  #template-button img {
    margin: 0;
  }

  #template-text {
    font-size: var(--step-0);
    margin: var(--space-2xs) auto 0 auto;
    width: fit-content;
  }

  #template-text a {
    font-size: var(--step-0);
  }

  #template-text a::after {
    content: " ↪";
  }

  .livestream { 
    margin-left: auto;
    display: block;
    margin-top: 1rem;
    margin-right: auto;
  }

  .livestream-header { 
    text-align: center;
  }

  h2 {
    margin-bottom: var(--space-xs);
  }

  h1 { 
    margin-top: 0;
  }

  p {
    margin: 0;
  }

  p + p {
    margin-top: var(--space-s);
  }

  pre {
    background: var(--color-grey-dark);
    border: 1px solid var(--color-grey-light);
    border-radius: var(--border-radius);
    font-size: var(--step-0);
    color: var(--color-yellow);
    overflow: auto;
    padding: var(--space-s);
    white-space: nowrap;
  }

  code {
    word-break: break-all;
  }

  .code-block {
    color: var(--color-yellow) !important;
  }

  li {
    margin: 0;
  }

  .smol {
    font-size: var(--step-0);
  }

  footer {
    border-top: 1px solid var(--color-grey-dark);
    text-align: center;
    margin-top: var(--space-3xl);
    padding: var(--space-l) 0;
  }

  footer p {
    font-size: var(--step-0);
  }

  @media (prefers-contrast: more) {
    #template-button {
      background: darkgreen;
      box-shadow: 0px 0px 30px 0px darkgreen;
      color: #fff;
    }
  }
</style>
