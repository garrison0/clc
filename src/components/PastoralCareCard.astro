---
export interface Props {
  care: any
}

const { care } = Astro.props;
---

<div class={"card" + (care.description.length > 140 ? " card-big" : "")}>
  <div class="container">
    <div class="font-semibold care-header">
      { care.typeOfCare }
    </div>
    <div class="description-container">
      <p class="description">{ care.description.trim() }</p>
    </div>
  </div>
</div>

<style>
  .container { 
    padding: 1rem;
  }

  .care-header { 
    border-bottom: 1px solid var(--color-text-border)
  }

  .image-container { 
    margin: 1.5rem;
    width: 150px;
    overflow: hidden;
    position: relative;
  }

  .image-container img { 
    border-radius: 100%;
  }

  .card { 
    color: var(--color-background);
    background: #ffffff;
    border-radius: 5px;
    box-shadow: 8px 8px 6px 1px rgba(0,0,0,0.5);
  }

  .card-big { 
    grid-column: span 2;
  }

  @media (max-width: 660px) { 
    .card { 
      grid-column: span 3;
    }
  }

  .description { 
    align-self: center;
    font-size: 16px;
  }

  .description-container { 
    display: flex;
    margin-top: 0.5rem;
  }

  .staff-info {
    padding: 1rem;
    padding-right: 0;
    padding-left: 0;
  }

  .staff-contact-info { 
    padding: 0.1rem 0.5rem;
    padding-left: 0;
    padding-right: 0;
  }
</style>
